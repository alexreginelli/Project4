<h1>Cocktails list</h1>
<div class="container mt-5">
  <h2>Search</h2>
  <%= form_with url: cocktails_path, method: :get, local: true, class: "row g-3 mb-4" do |form| %>
    <div class="col-md-5">
      <%= form.text_field :search, value: params[:search], class: "form-control", placeholder: "Search by name" %>
    </div>
    <div class="col-md-5">
      <%= form.text_field :ingredient, value: params[:ingredient], class: "form-control", placeholder: "Search by ingredient" %>
    </div>
    <div class="col-md-2 d-flex align-items-end">
      <%= form.submit "Search", class: "btn btn-outline-primary w-100" %>
    </div>
    
  <% end %>
  <% if @cocktails.any? %>
    <% @cocktails.each do |cocktail| %>
        <div class="card mb-3">
          <div class="card-body">
            <h4><%= link_to cocktail.name, cocktail_path(cocktail) %></h4>
            <p>Method: <%= cocktail.method %></p>
            <p>Glass: <%= cocktail.glass %></p>
            <p>Ice: <%= cocktail.ice.presence || "none" %></p>
            <p>Garnish: <%= cocktail.garnish.presence || "none" %></p>
            <p>Ingredients:</p>
            <ul>
              <% cocktail.cocktail_ingredients.each do |ci| %>
                  <li><%= link_to ci.ingredient.name, ingredients_path(search: ci.ingredient.name) %> <%= ci.quantity %> ml</li>
              <% end %>
            </ul>
            <% unless pin_login? %>
            <% if current_user.role.to_s.downcase == "manager" %>
            <div class="mt-3 d-flex gap-2">
              <%= link_to "Edit", edit_cocktail_path(cocktail), class: "btn btn-sm btn-outline-secondary" %>
              <%= button_to "Delete", cocktail_path(cocktail), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-sm btn-danger" %>
            </div>
          <% end %>
          </div>
          
<% end %>
        </div>
  <% end %>
  <% else %>
    <p>No cocktail found.</p>
  <% end %>
</div>
