<div>
  <h2>All users</h2>
  <% if current_user.role.downcase == "admin" %>
  <% if @user.errors.any? %>
    <div class="alert alert-danger">
      <h4>There were problems creating the user:</h4>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <table class="table table-bordered table-striped mt-3">
    <thead class="table-dark">
      <tr>
        <th>Name</th>
        <th>Surname</th>
        <th>Email</th>
        <th>Role</th>
        <% if current_user.role.downcase == "admin" %>
          <th>Actions</th>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.surname %></td>
          <td><%= user.email %></td>
          <td><%= user.role %></td>

            <td>
              <%= link_to "Edit", edit_user_path(user), class: "btn btn-sm btn-outline-secondary me-2" %>
              <%= button_to "Delete", user_path(user), method: :delete,
                  data: { confirm: "Are you sure you want to delete this user?" },
                  class: "btn btn-sm btn-danger" %>
            </td>
        </tr>
      <% end %>
      

      
        
      <% end %>
    </tbody>
  </table>
  <%= link_to "Create user", new_user_path, class: "btn btn-outline-primary mt-3" %>
</div>